  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="mercadopago-sdk" Version="2.4.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\SharedMessages\SharedMessages.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Exceptions\ResourceExceptMessages.Designer.cs">
